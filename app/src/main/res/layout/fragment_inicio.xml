<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:context=".fragmentos.InicioFragment">

    <ImageView
        android:id="@+id/imagenInicio"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@drawable/escuela" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imagenInicio">

        <ImageButton
            android:id="@+id/botonMatriculaInicico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck"
            tools:src="@drawable/matricula_alumno"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/botonEditarInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck"
            tools:src="@drawable/editar"
            tools:srcCompat="@tools:sample/avatars" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageButton
            android:id="@+id/botonBorrarInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck"
            tools:src="@drawable/borrar" />

        <ImageButton
            android:id="@+id/botonListarInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck"
            tools:src="@drawable/listar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>